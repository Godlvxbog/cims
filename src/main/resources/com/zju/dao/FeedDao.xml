<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.zju.dao.FeedDao">
    <!--//写入sql的引用-->
    <sql id="table">feed</sql>
    <sql id="selectFields">id,created_date,user_id,data,type</sql>

    <!--//下面是选择的语句：类似于函数体-->
    <select id="selectUserFeeds" resultType="com.zju.model.Feed">

--         #下面写SQL语句
        SELECT <include refid="selectFields"/>
        FROM <include refid="table"/>
        WHERE id &lt; #{maxId}
--
        <if test="userIds.size() != 0">
            AND user_id in 
            <foreach collection="userIds" index="index" item="item"
                     open="(" separator="," close=")">

              #{item}

            </foreach>
        </if>

        ORDER BY id DESC
        LIMIT #{count}
    </select>


</mapper>


